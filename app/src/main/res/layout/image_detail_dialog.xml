<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vRootDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <com.vn.photoviewer.SubsamplingScaleImageView
        android:id="@+id/imvDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/bg1" />

    <RelativeLayout
        android:id="@+id/vImageTopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@color/black_60"
        android:padding="@dimen/margin_small">


        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/margin_tiny"
            android:src="@drawable/ic_arrow_left_white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vImageBottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_60"
        android:padding="@dimen/margin_small">

        <com.xuanlocle.usermanager.widget.TextViewEx
            android:id="@+id/tvName"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            tools:text="Xuan Loc Le" />


    </RelativeLayout>


</RelativeLayout>